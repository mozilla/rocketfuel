// You spin me right round, stylus, right round
@import 'lib';

@keyframes spin {
    from { transform: rotate(0turn); }
    to { transform: rotate(1turn); }
}

.spinner, .loading-submit {
    animation(unquote('0.9s spin infinite steps(30)'));
}

.spinner {
    height: 30px;
    margin: 0 auto;
    background: url(../img/btn_spinner_alt_2x.png) no-repeat center;
    background-size: 30px auto;
    width: 30px;

    &.abs {
        left: 50%;
        margin-left: -15px;
        position: absolute;
    }

    &.alt {
        background-image: url(../img/btn_spinner_2x.png);
    }

    &.with-some-padding {
        margin-top: 40px;
        margin-bottom: 40px;
    }
}

.persona.loading-submit {
    background: url('data:image/png;base64,') no-repeat center;
    height: 18px;
    margin: 2px 0;
}

.spinner.small, .persona.loading-submit {
    background-size: 18px auto;
}
